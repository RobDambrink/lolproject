<?xml version="1.0"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
    
<hibernate-mapping> 
    <class 
        name="mappingHibernate.Comments" 
        table="comment">             
        <id 
            name="id" 
            column="id">
            <generator class="increment"/> 
        </id>	
        <property 
            name="accountId" 
            column="accountId"/>
        <property 
            name="comment" 
            column="text"/>
    </class> 
</hibernate-mapping> 
